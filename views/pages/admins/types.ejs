<div class="card">
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Libell√©</th>
                    
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                    <% if(types.length > 0) {%>
                    <% types.forEach(function(type){ %>
                <tr>
                    <td> <%= type.libelle %> </td>
                    <td>
                        <div class="btn-group" role="group" aria-label="action-ligne">
                            <button type="button" data-id="<%=  type.id %>" class="btn btn-warning" >
                              <a><i class="fas fa-edit"></i></a>
                            </button>
                        </div>
                        <div class="btn-group" role="group" aria-label="action-ligne">
                            <button type="button" data-id="<%=  type.id %>" class="btn btn-danger" >
                              <a><i class="fas fa-trash"></i></i></a>
                            </button>
                        </div>
                    </td>
                </tr>
                <% }); %>
                <% } else{ %>
                <tr>
                    <td class="text-center" colspan="3">Aucun type</td>
                </tr>
                <% } %>

            </tbody>
        </table>
    </div>
</div>
</div>