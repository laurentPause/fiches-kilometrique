<div class="card-header d-flex align-items-center">
    <h3 class="h4">
         Types
    </h3>
</div>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Pr√©nom</th>
                    <th>Email</th>
                    <th>Activer</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                    <% if(users.length > 0) {%>
                    <% users.forEach(function(user){ %>
                <tr>
                    <td> <%= user.nom %> </td>
                    <td> <%= user.prenom %> </td>
                    <td> <%= user.email %> </td>
                    <td>
                      <% if(user.activer > 0) {%>
                        <span  class="badge badge-pill badge-success">Activer</span>
                      <% }else{ %>
                        <span  class="badge badge-pill badge-danger">Non Activer</span>
                      <% } %>  
                    </td>
                    <td>
                        <div class="btn-group" role="group" aria-label="action-ligne">
                            <button type="button" class="btn btn-info" >
                              <a><i class="fa fa-eye"></i></a>
                            </button>
                        </div>
                    </td>
                </tr>
                <% }); %>
                <% } else{ %>
                <tr>
                    <td class="text-center" colspan="3">Aucune utilisateurs</td>
                </tr>
                <% } %>

            </tbody>
        </table>
    </div>
</div>