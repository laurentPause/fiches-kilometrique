<div class="card">
    <div class="card-body">
        <div class="btn-group mb-2" role="group" aria-label="Basic example">
            <button type="button" class="btn btn-primary" data-toggle="modal"
                data-target="#modalAdd">Ajouter</button>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(baremes.length > 0) {%>
                    <% baremes.forEach(function(bareme){ %>
                    <tr>
                        <% date = new Date(bareme.dateBareme); %> 

                        <td> <%= date.getFullYear() %> </td>
                        <td>
                            <div class="btn-group" role="group" aria-label="action-ligne">
                                <a type="button" href="/baremes/<%= bareme.id %>" class="btn btn-info" >
                                  <i class="fa fa-eye"></i>
                                </a>
                            </div>
                            <div class="btn-group" role="group" aria-label="action-ligne">
                                <button type="button" data-id="<%=  bareme.id %>" class="btn btn-warning">
                                    <a><i class="fas fa-edit"></i></a>
                                </button>
                            </div>
                            <div class="btn-group" role="group" aria-label="action-ligne">
                                <button type="button" data-id="<%=  bareme.id %>" class="btn btn-danger">
                                    <a><i class="fas fa-trash"></i></i></a>
                                </button>
                            </div>
                        </td>
                    </tr>
                    <% }); %>
                    <% } else{ %>
                    <tr>
                        <td class="text-center" colspan="2">Aucun barème</td>
                    </tr>
                    <% } %>

                </tbody>
            </table>
        </div>
    </div>
</div>

<div id="modalAdd" tabindex="-1" role="dialog" aria-hidden="true" class="modal fade text-left">
    <div role="document" class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="exampleModalLabel" class="modal-title">Ajouter un barème</h4>
                <button type="button" data-dismiss="modal" aria-label="Close" class="close"><span
                        aria-hidden="true">×</span></button>
            </div>
            <div class="modal-body">
                <form id="formAddBareme">
                    <div class="form-group">
                        <label for="date-bareme">Date</label>
                        <input id="date-bareme" class="form-control" type="date" name="date" required>
                    </div>
                    <div class="form-group">
                        <button type="button" data-dismiss="modal" class="btn btn-secondary">Annuler</button>
                        <button type="submit" class="btn btn-primary">Ajouter</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

<script src="/js/baremes.js"></script>